<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackWhite"
    tools:context=".activities.LikeUsersActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite"
        app:title="People who reacted"
        app:titleTextColor="@color/colorBlack"
        app:navigationIcon="@drawable/ic_arrow_left_light"
        android:elevation="5dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tap_like_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="@color/colorBlack"
        app:tabTextColor="@color/gray_light"
        app:tabIndicatorColor="@color/colorPink"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpg_like_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
