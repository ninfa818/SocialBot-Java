<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/posts_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackWhite"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/posts_swipe_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/post_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackWhite">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:padding="5dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="200dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="8dp"
                            android:layout_marginTop="4dp"
                            app:cardElevation="10dp">

                            <ImageView
                                android:id="@+id/status_back_image"
                                android:layout_width="100dp"
                                android:layout_height="200dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/background_hd" />

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/circle_gradient">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/plus_circle"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginTop="0.5dp"
                                    android:src="@drawable/plus" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_margin="5dp"
                                android:text="Add to Story"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </androidx.cardview.widget.CardView>

                        <include layout="@layout/status_item_light"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/story_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />
                    </LinearLayout>
                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/colordivider" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/posts_recyclerview"
                    android:name=".fragments.PostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@color/colorBackWhite"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    app:layoutManager="LinearLayoutManager"
                    tools:context="com.hostcart.socialbot.fragments.PostFragment" />

                <com.hostcart.socialbot.views.SharePostView
                    android:id="@+id/sharePostView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
